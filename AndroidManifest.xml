<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.expensetracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddClaim"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".AddClaimActivity"
            android:label="@string/title_activity_add_claim" >
        </activity>
        <activity
            android:name=".AddExpenseItemsActivity"
            android:label="@string/title_activity_add_expense_items" >
        </activity>
        <activity
            android:name=".ListExpenseItemsActivity"
            android:label="@string/title_activity_list_expense_items" >
        </activity>
        <activity
            android:name=".EditExpenseItemsActivity"
            android:label="@string/title_activity_edit_expense_items" >
        </activity>
        <activity
            android:name=".EditClaimActivity"
            android:label="@string/title_activity_edit_claim" >
        </activity>
        <activity
            android:name=".EmailClaimActivity"
            android:label="@string/title_activity_email_claim" >
        </activity>
    </application>

</manifest>
