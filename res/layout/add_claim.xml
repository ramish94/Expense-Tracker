<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="showExpenseItemsAlertDialog"
        android:text="Next" />

    <TextView
        android:id="@+id/endDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/endDateEditText"
        android:layout_alignParentLeft="true"
        android:text="End date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/endDateEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/AddClaimdescriptionEditText"
        android:layout_below="@+id/startDateTextView"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:hint="MM/DD/YYYY"
        android:inputType="date" />

    <EditText
        android:id="@+id/AddClaimdescriptionEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/DescriptionTextView"
        android:layout_toRightOf="@+id/DescriptionTextView"
        android:ems="10"
        android:hint="Enter description here..."
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/DescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/endDateTextView"
        android:layout_below="@+id/endDateTextView"
        android:layout_marginTop="41dp"
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/addClaimNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addClaimNameTextView"
        android:layout_alignLeft="@+id/startDateEditText"
        android:ems="10"
        android:hint="Enter name here..." />

    <TextView
        android:id="@+id/startDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/startDateEditText"
        android:layout_alignLeft="@+id/endDateTextView"
        android:text="Start date"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/startDateEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/endDateEditText"
        android:layout_alignParentTop="true"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:hint="MM/DD/YYYY"
        android:inputType="date" />

    <TextView
        android:id="@+id/addClaimNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/startDateTextView"
        android:layout_alignLeft="@+id/startDateTextView"
        android:layout_marginBottom="43dp"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>